generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      String
  createdAt DateTime @default(now())
}

model News {
  id      String @id @default(cuid())
  title   String
  excerpt String @db.Text
  content String @db.LongText
  date    String
  image   String
  status  String
}

model Profile {
  id                 Int    @id @default(1)
  dasarHukum         String @db.LongText
  strukturOrganisasi String @db.LongText
  uptd               String @db.LongText
  tugasFungsi        String @db.LongText
  jabatanTataKerja   String @db.LongText
}

model Setting {
  role             String  @id
  canManageNews    Boolean
  canManageUsers   Boolean
  canManageProfile Boolean
  canManageJdih    Boolean @default(false)
}

model Employee {
  id         String             @id @default(cuid())
  name       String
  nip        String             @unique
  birthPlace String
  createdAt  DateTime           @default(now())
  golongan   String             @default("-")
  keaktifan  String             @default("Aktif")
  status     String             @default("PNS")
  gender     String             @default("Laki-laki")
  positionId String?
  position   Position?          @relation(fields: [positionId], references: [id])
  documents  EmployeeDocument[]

  @@index([positionId])
}

model Position {
  id                String             @id @default(cuid())
  namaJabatan       String
  jenisJabatan      String
  eselon            String?
  jenjangFungsional String?
  jenisPelaksana    String?
  batasUsiaPensiun  Int
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  employees         Employee[]
  documents         EmployeeDocument[]

  @@index([jenisJabatan])
}

model EmployeeDocument {
  id           String    @id @default(cuid())
  employeeId   String
  documentType String
  nomorSurat   String?
  tanggalSurat DateTime?
  tanggalMulai DateTime?
  tahunSKP     String?
  filePath     String
  fileName     String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  predikat     String?
  positionId   String?
  employee     Employee  @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  position     Position? @relation(fields: [positionId], references: [id])

  @@index([employeeId])
  @@index([documentType])
  @@index([positionId])
}

model JdihDocument {
  id          String   @id @default(cuid())
  title       String
  type        String
  number      String
  year        String
  description String?  @db.Text
  filePath    String?
  fileName    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([type])
  @@index([year])
}

model SptReport {
  id        String   @id @default(cuid())
  name      String
  nip       String
  year      String
  filePath  String
  fileName  String
  createdAt DateTime @default(now())

  @@index([nip])
  @@index([year])
}

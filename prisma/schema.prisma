datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      String
  createdAt DateTime @default(now())
}

model News {
  id      String @id @default(cuid())
  title   String
  excerpt String @db.Text
  content String @db.LongText
  date    String
  image   String
  status  String
}

model Profile {
  id                Int      @id @default(1)
  dasarHukum        Json
  strukturOrganisasi Json
  uptd              Json
  tugasFungsi       Json
  jabatanTataKerja  Json
}

model Setting {
  role             String  @id
  canManageNews    Boolean
  canManageUsers   Boolean
  canManageProfile Boolean
  canManageJdih    Boolean @default(false)
}

model Employee {
  id         String              @id @default(cuid())
  name       String
  nip        String              @unique
  birthPlace String
  gender     String              @default("Laki-laki")
  status     String              @default("PNS")
  keaktifan  String              @default("Aktif")
  golongan   String              @default("-")
  positionId String?
  position   Position?           @relation(fields: [positionId], references: [id])
  createdAt  DateTime            @default(now())
  documents  EmployeeDocument[]
  
  @@index([positionId])
}

model Position {
  id                String     @id @default(cuid())
  namaJabatan       String
  jenisJabatan      String     // "Struktural", "Fungsional", "Pelaksana"
  eselon            String?    // Only for Struktural
  jenjangFungsional String?    // Only for Fungsional
  jenisPelaksana    String?    // Only for Pelaksana
  batasUsiaPensiun  Int        // 58, 60, or 65
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  employees         Employee[]
  documents         EmployeeDocument[]
  
  @@index([jenisJabatan])
}

model EmployeeDocument {
  id            String   @id @default(cuid())
  employeeId    String
  employee      Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  documentType  String   // "SK_CPNS", "SK_PNS", "SK_PPPK", "SKP", "SK_JABATAN"
  nomorSurat    String?  // Optional for SKP
  tanggalSurat  DateTime? // Optional for SKP
  tanggalMulai  DateTime? // Optional for SKP
  tahunSKP      String?  // Only for SKP documents
  predikat      String?  // Only for SKP: "Baik", "Sangat Baik", "Perlu Perbaikan", "Kurang", "Sangat Kurang"
  positionId    String?  // Only for SK_JABATAN
  position      Position? @relation(fields: [positionId], references: [id])
  filePath      String
  fileName      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([employeeId])
  @@index([documentType])
  @@index([positionId])
}

model JdihDocument {
  id          String   @id @default(cuid())
  title       String
  type        String   // e.g., "Peraturan Daerah", "Peraturan Bupati", "Keputusan Bupati"
  number      String
  year        String
  description String?  @db.Text
  filePath    String?
  fileName    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([type])
  @@index([year])
}

model SptReport {
  id          String   @id @default(cuid())
  name        String
  nip         String
  year        String
  filePath    String
  fileName    String
  createdAt   DateTime @default(now())
  
  @@index([nip])
  @@index([year])
}
